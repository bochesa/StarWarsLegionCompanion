@model StarWarsLegionCompanion.Site.Controllers.ArmyController.AvailableUpgradesViewModel

<div>
    @foreach (var upgrade in Model.AvailableUpgrades)
    {
        <form method="post" asp-action="AddUpgrade" asp-controller="Army" asp-route-id="@Model.ArmyId"
              asp-route-chosenunitid="@Model.ChosenunitId"
              asp-route-upgradeid="@upgrade.Id">
            <span>@upgrade.Name </span>
            <span> [@upgrade.PointCost]</span>
            <button type="submit" class="btn btn-success btn-circle align-middle">
                <i class="fas fa-plus"></i>
            </button>
        </form>
    }
</div>