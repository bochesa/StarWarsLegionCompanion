<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StarWarsLegionMobile.Views.UpgradeDetailsPage"
              xmlns:viewmodel="clr-namespace:StarWarsLegionMobile.ViewModels"
             x:DataType="viewmodel:UpgradeDetailsViewModel"
             Title="{Binding UpgradeModel.Name}">
    <VerticalStackLayout>
        <Label 
            Text="{Binding UpgradeModel.Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Image Source="{Binding UpgradeModel.Image}" WidthRequest="240" ></Image>
        <Label Text="{Binding UpgradeModel.Text}" Margin="6"/>
    </VerticalStackLayout>
</ContentPage>